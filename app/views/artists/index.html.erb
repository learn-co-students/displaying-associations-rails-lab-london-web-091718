<div class="">
  <% @artists.each do |artist| %>
    <h2><%= artist.name %></h2>
    <p><%= artist.song_count %>
      <%= "song".pluralize(artist.song_count) %></p>
    <ul>
      <% artist.songs.each do |song| %>
        <li><%= link_to song.title, song %></li>
      <% end %>
    </ul>

  <% end %>
</div>
